<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light Theme Color Palette -->
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundPrimary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="BackgroundTertiary" Color="#E8E8E8"/>
    
    <!-- Foreground/Text Colors -->
    <SolidColorBrush x:Key="ForegroundPrimary" Color="#000000"/>
    <SolidColorBrush x:Key="ForegroundSecondary" Color="#666666"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentPrimary" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentSecondary" Color="#005A9E"/>
    
    <!-- Border and UI Element Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#D1D1D1"/>
    <SolidColorBrush x:Key="ProgressBarBackground" Color="#E0E0E0"/>
    
    <!-- Window and Card Backgrounds -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#F9F9F9"/>
    
    <!-- Text Brushes -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#1F1F1F"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#605E5C"/>
    
    <!-- Button Colors -->
    <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="SecondaryButtonBrush" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="DangerButtonBrush" Color="#D13438"/>
    
    <!-- Hover States -->
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="PrimaryButtonHoverBrush" Color="#106EBE"/>
    
    <!-- Success and Error Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF8C00"/>
    
</ResourceDictionary>

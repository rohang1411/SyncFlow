<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundPrimary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="BackgroundTertiary" Color="#E5E5E5"/>
    <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="WindowBackground" Color="#F3F3F3"/>
    
    <!-- Foreground Colors -->
    <SolidColorBrush x:Key="ForegroundPrimary" Color="#000000"/>
    <SolidColorBrush x:Key="ForegroundSecondary" Color="#666666"/>
    <SolidColorBrush x:Key="ForegroundTertiary" Color="#999999"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentPrimary" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentPrimaryHover" Color="#106EBE"/>
    <SolidColorBrush x:Key="AccentSecondary" Color="#60CDFF"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="BorderHover" Color="#AAAAAA"/>
    
    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#0078D4"/>
    <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#106EBE"/>
    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#005A9E"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>
    
    <SolidColorBrush x:Key="ButtonSecondaryBackground" Color="#E5E5E5"/>
    <SolidColorBrush x:Key="ButtonSecondaryBackgroundHover" Color="#D5D5D5"/>
    <SolidColorBrush x:Key="ButtonSecondaryBackgroundPressed" Color="#C5C5C5"/>
    
    <SolidColorBrush x:Key="ButtonDangerBackground" Color="#D13438"/>
    <SolidColorBrush x:Key="ButtonDangerBackgroundHover" Color="#E13438"/>
    <SolidColorBrush x:Key="ButtonDangerBackgroundPressed" Color="#B12428"/>
    
    <!-- State Colors -->
    <SolidColorBrush x:Key="SuccessColor" Color="#107C10"/>
    <SolidColorBrush x:Key="WarningColor" Color="#FFC000"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#D13438"/>
    <SolidColorBrush x:Key="InfoColor" Color="#0078D4"/>
    
    <!-- Progress Bar -->
    <SolidColorBrush x:Key="ProgressBarBackground" Color="#E5E5E5"/>
    <SolidColorBrush x:Key="ProgressBarForeground" Color="#0078D4"/>
    
    <!-- Input Controls -->
    <SolidColorBrush x:Key="TextBoxBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextBoxForeground" Color="#000000"/>
    <SolidColorBrush x:Key="TextBoxBorder" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="TextBoxBorderFocused" Color="#0078D4"/>
    
</ResourceDictionary>